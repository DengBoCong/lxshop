<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dbc.lxshop.Model.Entity.LGoodsCategoryEntity" table="l_goods_category" schema="lxshop">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="pid">
            <column name="pid" sql-type="int(11)"/>
        </property>
        <property name="icon">
            <column name="icon" sql-type="varchar(1000)" length="1000"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="isHomeRecommended">
            <column name="is_home_recommended" sql-type="tinyint(2)"/>
        </property>
        <property name="sort">
            <column name="sort" sql-type="tinyint(3)"/>
        </property>
        <property name="addTime">
            <column name="add_time" sql-type="int(11)"/>
        </property>
        <property name="updTime">
            <column name="upd_time" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>