<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dbc.lxshop.Model.Entity.LOrderCommentsEntity" table="l_order_comments" schema="lxshop">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11) unsigned"/>
        </property>
        <property name="orderId">
            <column name="order_id" sql-type="int(11) unsigned"/>
        </property>
        <property name="goodsId">
            <column name="goods_id" sql-type="int(11) unsigned"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(255)"/>
        </property>
        <property name="rating">
            <column name="rating" sql-type="tinyint(1) unsigned"/>
        </property>
        <property name="addTime">
            <column name="add_time" sql-type="int(11) unsigned"/>
        </property>
    </class>
</hibernate-mapping>