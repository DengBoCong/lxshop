<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dbc.lxshop.Model.Entity.LGoodsStandradEntity" table="l_goods_standrad" schema="lxshop">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="measure">
            <column name="measure" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="color">
            <column name="color" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="originPrice">
            <column name="origin_price" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
        <property name="inventory">
            <column name="inventory" sql-type="int(11)"/>
        </property>
        <property name="factoryPrice">
            <column name="factory_price" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
        <property name="guidePrice">
            <column name="guide_price" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
        <property name="addTime">
            <column name="add_time" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>